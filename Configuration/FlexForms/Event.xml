
<?xml version="1.0" encoding="utf-8"?>
<T3DataStructure>
  <sheets>
    <sDEF>
      <ROOT>
        <TCEforms>
          <sheetTitle>Anzeige-Einstellungen</sheetTitle>
        </TCEforms>
        <type>array</type>
        <el>

          <!-- (A) Template-Auswahl: lieber Varianten statt freier Pfad -->
          <settings.templateVariant>
            <TCEforms>
              <label>Template-Variante</label>
              <config>
                <type>select</type>
                <renderType>selectSingle</renderType>
                <items type="array">
                  <numIndex index="0">
                    <numIndex index="0">Standard</numIndex>
                    <numIndex index="1">standard</numIndex>
                  </numIndex>
                  <numIndex index="1">
                    <numIndex index="0">Sidebar</numIndex>
                    <numIndex index="1">sidebar</numIndex>
                  </numIndex>
                  <numIndex index="2">
                    <numIndex index="0">NewDesign</numIndex>
                    <numIndex index="1">newdesign</numIndex>
                  </numIndex>
                  <numIndex index="3">
                    <numIndex index="0">NewDesignSidebar</numIndex>
                    <numIndex index="1">newdesignsidebar</numIndex>
                  </numIndex>
                </items>
                <default>standard</default>
              </config>
            </TCEforms>
          </settings.templateVariant>
          <settings.maxCount>
            <TCEforms>
              <label>Max. Anzahl (0=alle)</label>
              <config>
                <type>input</type>
                <eval>int</eval>
                <size>5</size>
                <default>0</default>
              </config>
            </TCEforms>
          </settings.maxCount>

          <settings.dateFrom>
            <TCEforms>
              <label>Von Datum</label>
              <config>
                <type>input</type>
                <renderType>inputDateTime</renderType>
                <eval>datetime</eval>
                <default>0</default>
              </config>
            </TCEforms>
          </settings.dateFrom>

          <settings.dateTo>
            <TCEforms>
              <label>Bis Datum</label>
              <config>
                <type>input</type>
                <renderType>inputDateTime</renderType>
                <eval>datetime</eval>
                <default>0</default>
              </config>
            </TCEforms>
          </settings.dateTo>

          <settings.enableSearch>
            <TCEforms>
              <label>Suche anzeigen</label>
              <config>
                <type>check</type>
                <items>
                  <numIndex index="0">
                    <numIndex index="0">Ja</numIndex>
                  </numIndex>
                </items>
                <default>0</default>
              </config>
            </TCEforms>
          </settings.enableSearch>

          <settings.detailPageUid>
            <TCEforms>
              <label>Detailseite</label>
              <config>
                <type>group</type>
                <internal_type>db</internal_type>
                <allowed>pages</allowed>
                <size>1</size>
                <maxitems>1</maxitems>
                <minitems>0</minitems>
              </config>
            </TCEforms>
          </settings.detailPageUid>

        </el>
      </ROOT>
    </sDEF>
  </sheets>
</T3DataStructure>
